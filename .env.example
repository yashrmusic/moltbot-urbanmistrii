# Environment Configuration for URBANMISTRII Content Bot
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# WhatsApp Integration
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_PHONE_NUMBER=1234567890

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Instagram Publishing
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# Google Drive Monitoring
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
GOOGLE_APPLICATION_CREDENTIALS=path_to_service_account_json

# Gmail Configuration
GMAIL_ADDRESS=your_email@gmail.com
GMAIL_APP_PASSWORD=your_16_char_app_password
MAIL_INBOX_ADDRESS=mail@urbanmistrii.com
HR_INBOX_ADDRESS=hr@urbanmistrii.com

# Clawdbot Configuration
CLAWDBOT_WEBHOOK_URL=https://your_domain.com/webhook
CLAWDBOT_DEBUG=false
CLAWDBOT_TOKEN=your_random_token_here

# Server Configuration
PORT=3000
LOG_LEVEL=info

# Feature Flags
ENABLE_DRIVE_MONITOR=true
ENABLE_EMAIL_SYNC=true
ENABLE_INSTAGRAM_PUBLISH=true
ENABLE_WHATSAPP_COMMANDS=true
